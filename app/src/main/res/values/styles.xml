<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?PrimaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="BaseTheme.Dark" parent="AppTheme.Dark">
        <item name="WindowBackGroundColor">@color/black</item>
        <item name="TextTitleColor">@color/white</item>
        <item name="BackGroundColorWhite">@color/colorDarkTitle</item>
        <item name="PrimaryColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BaseTheme.Light" parent="AppTheme.Light">
        <item name="WindowBackGroundColor">@color/colorWindowBackground</item>
        <item name="TextTitleColor">@color/colorDarkTitle</item>
        <item name="BackGroundColorWhite">@color/white</item>
        <item name="PrimaryColor">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorDarkSubTitle</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="FontFamilyMedium">
        <item name="android:fontFamily">@string/fontFamily_medium</item>
    </style>

    <style name="MySpinnerLook" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:popupBackground">#ffffff</item>
    </style>
</resources>
